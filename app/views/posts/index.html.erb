<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<%= pie_chart Post.group(:title).count %>

<%= link_to "Download PDF", report_pdf_path(format: :pdf), class: "btn btn-sm btn-default", target: "_blank" %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Body</th>
      <th>StartDate</th>
      <th>EndDate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at%></td>
        <td><%= post.updated_at%></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
